{
  "name": "simple-computer-use-desktop",
  "version": "1.0.0",
  "description": "Simple Computer Use Desktop - Electron GUI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "keywords": [
    "llm",
    "voice-control",
    "electron"
  ],
  "author": {
    "name": "Simple Computer Use Team",
    "email": "pablonavaber@hotmail.com"
  },
  "homepage": "https://github.com/pnmartinez/llm-pc-control",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.13.5"
  },
  "build": {
    "appId": "com.simplecomputeruse.desktop",
    "productName": "Simple Computer Use Desktop",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*",
      "node_modules/axios/**/*",
      "!../resources/**/*",
      "!../build.spec",
      "!../dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../resources/ollama",
        "to": "ollama",
        "filter": ["**/*"]
      },
      {
        "from": "../resources/python-backend",
        "to": "python-backend",
        "filter": ["**/*"]
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Utility",
      "icon": "ic_launcher-playstore.png",
      "maintainer": "pablonavaber@hotmail.com",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "ic_launcher-playstore.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "ic_launcher-playstore.png",
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

